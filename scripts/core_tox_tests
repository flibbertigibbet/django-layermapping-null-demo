#!/bin/bash

set -e

function usage() {
    echo -n \
         "Usage: $(basename "$0")

Run full tox test suite on Django core with Spatialite.
"
}

if [ "${BASH_SOURCE[0]}" = "${0}" ]
then
    if [ "${1:-}" = "--help" ]
    then
        usage
    else
        docker-compose up -d django

        # Django tests
        echo "Running core Django tests via tox with Spatialite"
        docker-compose \
            run --rm --entrypoint tox \
            -e TOX_WORK_DIR=/usr/local/src/django \
            -e PYTHONPATH="${PYTHONPATH}:/usr/local/src/django/test_spatialite.py" \
            -e DJANGO_SETTINGS_MODULE='test_spatialite' \
            -w /usr/local/src/django \
            django
        echo "Tests complete"

        docker-compose kill django \
            && docker-compose rm -f django
    fi
fi
